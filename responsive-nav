        <script>

    let t=document.getElementById("menulist")
    t.style.maxHeight="0px";
    function togglemenu(){

   
    if (   t.style.maxHeight=="0px") {
           t.style.maxHeight="300px"
    }
    else{
         t.style.maxHeight="0px";
    } }
